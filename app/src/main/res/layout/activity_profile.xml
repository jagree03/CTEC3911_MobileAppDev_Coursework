<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView_ProfileSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="31dp"
        android:text="Profile Settings"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout_ProfileSettingsFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayout_ProfileSettingsFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout_ProfileSettingsEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ProfileSettings">

        <TextView
            android:id="@+id/textView_FullNameProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="25sp"
            android:translationY="2dp" />

        <EditText
            android:id="@+id/editText_FullNameProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:translationX="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_ProfileSettingsEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout_ProfileSettingsPhoneNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_ProfileSettingsFullName">

        <TextView
            android:id="@+id/textView_EmailProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="25sp"
            android:translationY="2dp" />

        <EditText
            android:id="@+id/editText_EmailProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            android:translationX="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_ProfileSettingsPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout_ProfileSettingsUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_ProfileSettingsEmail">

        <TextView
            android:id="@+id/textView_PhoneNoProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:"
            android:textSize="25sp"
            android:translationY="2dp" />

        <EditText
            android:id="@+id/editText_PhoneNoProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="PhoneNo"
            android:inputType="phone"
            android:translationX="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_ProfileSettingsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="21dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout_ProfileSettingsPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_ProfileSettingsPhoneNo">

        <TextView
            android:id="@+id/textView_UsernameProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="25sp"
            android:translationY="2dp" />

        <EditText
            android:id="@+id/editText_UsernameProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:translationX="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_ProfileSettingsPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="49dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView_MessageUpdatePasswordProfileSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_ProfileSettingsUsername">

        <TextView
            android:id="@+id/textView_PasswordProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="25sp"
            android:translationY="2dp" />

        <EditText
            android:id="@+id/editText_PasswordProfileSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:translationX="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdatePasswordProfileSettings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="83dp"
        android:text="Update Password"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_MessageUpdatePasswordProfileSettings" />

    <TextView
        android:id="@+id/textView_MessageUpdatePasswordProfileSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="153dp"
        android:text="Passwords should contain atleast 8 characters."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdatePasswordProfileSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_ProfileSettingsPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>