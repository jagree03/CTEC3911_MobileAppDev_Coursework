<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingCartActivity">

    <TextView
        android:id="@+id/textView_ShoppingCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="10dp"
        android:text="Shopping Cart"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/ListViewShoppingCart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListViewShoppingCart"
        android:layout_width="409dp"
        android:layout_height="342dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ShoppingCart" />

    <Button
        android:id="@+id/btn_goToCheckout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="52dp"
        android:onClick="goToPayment"
        android:text="Checkout"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutShoppingCartOrderTotal" />

    <TextView
        android:id="@+id/textView_Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="40dp"
        android:text="Quantity:"
        android:textSize="20sp"
        android:translationY="5dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutShoppingCartOrderTotal"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewShoppingCart" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="25dp"
        android:background="#ffc107"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutShoppingCartOrderTotal"
        app:layout_constraintEnd_toStartOf="@+id/btnRemoveItemFromShoppingCart"
        app:layout_constraintStart_toEndOf="@+id/textView_Quantity"
        app:layout_constraintTop_toBottomOf="@+id/ListViewShoppingCart" />

    <Button
        android:id="@+id/btnRemoveItemFromShoppingCart"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="35dp"
        android:text="REMOVE"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayoutShoppingCartOrderTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/ListViewShoppingCart"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/LinearLayoutShoppingCartOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_goToCheckout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber">

        <TextView
            android:id="@+id/textView_OrderTotalShoppingCartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="63dp"
            android:text="ORDER TOTAL: Â£"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView_OrderTotalShoppingCartValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textAlignment="center"
            android:textSize="27sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>